@page
@model Pizza_mama.Pages.MenuPizzasModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Menu des pizzas</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>

    <a asp-page="Index">
        <img src="~/images/small_logo.png" id="small_logo" />
    </a>

    <div class="menu_title">
        <h1>Les Pizzas</h1>
    </div>




    <div class="menu_list">
        @foreach (var pizza in Model.Pizzas)
        {
            <div class="menu_list_item">
                <span class="menu_list_title">@Html.DisplayFor(modelItem => pizza.name)</span>
                <span class="menu_list_price">@String.Format("{0:0.00}", pizza.price)€</span>
                <span class="menu_list_ingredients">@Html.DisplayFor(modelItem => pizza.ingredients)</span>
                @if (@pizza.vegetarian == true)
                {
                    <span class="menu_list_vegetarian">végétarienne</span>
                }
            </div>
        }
    </div>

</body>

</html>